import streamlit as st
import pandas as pd

# Titre de l'application
st.title("Filtrage des films avec Nicolas Cage")

# Charger les données CSV
@st.cache
def load_data("data/imdb-movies-dataset 2.csv"):
    df = pd.read_csv("data/imdb-movies-dataset 2.csv")
    return df

file_path = "lefichier.csv"
df = load_data(file_path)

# Filtrer les films avec Nicolas Cage dans le casting
filtered_df = df[df['Cast'].str.contains("Nicolas Cage", case=False, na=False)]

# Afficher les résultats
st.subheader("Films avec Nicolas Cage dans le casting :")
st.write(filtered_df)
